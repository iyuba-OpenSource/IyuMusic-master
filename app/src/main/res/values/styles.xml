<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light" />
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:overScrollMode">always</item>
    </style>
    <!-- Activity无标题栏 开始-->
    <style name="MyAppTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/skin_app_color</item>
        <item name="colorPrimaryDark">@color/skin_app_color</item>
        <item name="colorAccent">@color/skin_app_color</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="MyWebTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/skin_app_color</item>
        <item name="colorPrimaryDark">@color/skin_app_color</item>
        <item name="colorAccent">@color/skin_app_color</item>
    </style>

    <style name="SeekBar_Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">6.0dip</item>
        <item name="android:minHeight">6.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/seekbar_horizontal</item>
        <item name="android:thumb">@drawable/ic_seek_thumb</item>
        <item name="android:thumbOffset">10.0dip</item>
    </style>

    <style name="mProgress_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal
        </item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <style name="DubbingText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DubbingIndex">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FiveRatingBar" parent="@android:style/Widget.RatingBar">       
        <item name="android:progressDrawable">@drawable/five_rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ColorTranslucentBarTheme" parent="AppTheme">
        <!--4.4之前的状态栏跟随系统-->
    </style>
    <!-- Activity无标题栏 结束-->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/skin_app_color</item>
        <item name="colorPrimaryDark">@color/skin_app_color</item>
        <item name="colorAccent">@color/skin_app_color</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="MyMaterialDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/skin_app_color</item>
        <item name="colorPrimaryDark">@color/skin_app_color</item>
        <item name="colorAccent">@color/skin_app_color</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:minWidth">@dimen/action_button_min_width</item>
        <item name="android:paddingLeft">@dimen/action_button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/action_button_padding_horizontal</item>
        <item name="android:background">@drawable/material_dialog_button</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="PayMethodCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/paymethod_cb</item>
        <item name="android:padding">5.0dp</item>
        <item name="android:maxHeight">10.0dp</item>
    </style>

</resources>
